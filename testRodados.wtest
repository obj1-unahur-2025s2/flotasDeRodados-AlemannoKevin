import flota.*

describe "Tests de un Corsa"{
    
    const corcita = new Corsa(color = azul)
    
    test "Capacidad" {
        assert.equals(4, corcita.capacidad())
    }

    test "Velocidad" {
        assert.equals(150, corcita.velocidadMaxima())
    }

    test "Peso" {
        assert.equals(1300, corcita.peso())
    }

    test "Color" {
        assert.equals(azul, corcita.color())
    }
}

describe "Tests de un Kwid"{
    
    const kwid = new RenoKwid(tanqueAdicional = true)
    
